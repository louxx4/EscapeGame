<UserControl x:Class="EscapeGame.Views.Controls.Objects.Oven"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EscapeGame.Views.Controls.Objects"
             mc:Ignorable="d" 
             d:DesignHeight="355" d:DesignWidth="500">
    <UserControl.Resources>
        <Style TargetType="Canvas" x:Key="CanvasHorizontal">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush RadiusX="0.6" RadiusY="0.2">
                        <GradientStop Color="#FF939393" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Canvas" x:Key="CanvasVertical">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush RadiusX="0.3" RadiusY="0.6">
                        <GradientStop Color="#FF939393" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Rectangle" x:Key="ChipBase">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="RadiusX" Value="1"/>
            <Setter Property="RadiusY" Value="10"/>
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Color="#FF5D3B19" Offset="0.2"/>
                        <GradientStop Color="#FFFFF40B" Offset="1.2"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <RotateTransform Angle="25"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="Black"
                   Grid.ColumnSpan="3" Margin="10 10"
                   RadiusX="10" RadiusY="10"/>
        <StackPanel>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="10 28 0 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="10 20 0 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="10 20 0 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="10 20 0 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Rectangle Fill="WhiteSmoke"    
                       Margin="0 28 10 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="0 20 10 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="0 20 10 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
            <Rectangle Fill="WhiteSmoke"    
                       Margin="0 20 10 0"
                       Width="20" Height="60"
                       RadiusX="10" RadiusY="10"/>
        </StackPanel>
        <Grid Grid.Column="1" Margin="0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="1" Margin="0 20 0 0" Style="{StaticResource CanvasHorizontal}"/>
            <Canvas Grid.Column="1" Grid.Row="2" Margin="0 0 0 20" Style="{StaticResource CanvasHorizontal}"/>
            <Canvas Grid.Row="1" Style="{StaticResource CanvasVertical}"/>
            <Canvas Grid.Column="2" Grid.Row="1" Style="{StaticResource CanvasVertical}"/>
            <Grid Grid.Row="1" Grid.Column="1">
                <Rectangle Style="{StaticResource ChipBase}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl> 
